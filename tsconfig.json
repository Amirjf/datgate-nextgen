{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/ui": ["components/index"],
      "@/hooks": ["hooks/index"],
      "@/design": ["libs/design/index"],
      "@/models": ["libs/models/index"],
      "@/data-layer": ["libs/data-layer/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "libs"],
  "exclude": ["node_modules"]
}
